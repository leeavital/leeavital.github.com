" tab stuff
set tabstop=4
set shiftwidth=3
set softtabstop=3

set smartindent


set nocompatible


" menu for common commands in ex mode
set wildmenu
set wildmode=list:longest,full


" Spaces are better than a tab character
" set expandtab
set smarttab

set number


" highlight search results
set hlsearch


" nowrap
set nowrap


set cursorline



" colorscheem
colorscheme murphy


" no need for shift key when changing modes
nore ; :
nore , ;


" encforce 80 column limit
set cc=80
